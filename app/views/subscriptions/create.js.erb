<% if @subscription.errors.present? %>
  $('.error-messages').html('');
  <% @subscription.errors.full_messages.each do |message| %>
    $('.error-messages').html('<%= j message %>');
  <% end %>
<% else %>
  $('.subscribe-link').hide()
  $('.unsubscribe-link').attr("href", "/subscriptions/" + <%= @subscription.id %>).show()
  $('.error-messages').html('');
<% end %>
